<table>
  <colgroup>
    <col class="creator" />
    <col class="description" />
    <col class="known" />
    <col class="support" />
    <col class="outcome" />
  </colgroup>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Prediction</th>
      <th>Known</th>
      <th>Support</th>
      <th>Outcome</th>
    </tr>
  </thead>
  <tbody>
  <%- predictions.each do |prediction| -%>
    <tr>
      <td><%= show_user(prediction.creator) %></td>
      <td><%= link_to TitleTagPresenter.new(prediction.description).tag, prediction_path(prediction) %></td>
      <td><%= TimeInContentTagPresenter.new(prediction.deadline).tag %></td>
      <td><%= confidence_and_count(prediction) %></td>
      <td><%= outcome(prediction) %></td>
    </tr>
  <%- end -%>
  </tbody>
</table>
